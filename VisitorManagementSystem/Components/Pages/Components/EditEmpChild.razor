@rendermode InteractiveServer
<style>
	.animated-button {
		position: relative;
		display: flex;
		align-items: center;
		gap: 2px; /* Halved from 4px */
		padding: 8px 30px; /* Halved from 16px 36px */
		border: 2px solid; /* Halved from 4px */
		border-color: transparent;
		font-size: 8px; /* Halved from 16px */
		background-color:; /* Keep this as is */
		border-radius: 50px; /* Halved from 100px */
		font-weight: 600;
		color: #1f387e;
		box-shadow: 0 0 0 1px #ffffff; /* Halved from 2px */
		cursor: pointer;
		overflow: hidden;
		transition: all 0.6s cubic-bezier(0.23, 1, 0.32, 1);
		white-space: nowrap; /* Prevent text from wrapping */
		min-width: 100px; /* Set a minimum width to accommodate text */
	}

		.animated-button svg {
			position: absolute;
			width: 12px; /* Halved from 24px */
			fill: #1f387e;
			z-index: 9;
			transition: all 0.8s cubic-bezier(0.23, 1, 0.32, 1);
		}

		.animated-button .arr-1 {
			right: 8px; /* Halved from 16px */
		}

		.animated-button .arr-2 {
			left: -12.5%; /* Halved from -25% */
		}

		.animated-button .circle {
			position: absolute;
			top: 50%;
			left: 50%;
			transform: translate(-50%, -50%);
			width: 10px; /* Halved from 20px */
			height: 10px; /* Halved from 20px */
			background-color: #c5e5e4;
			border-radius: 50%;
			opacity: 0;
			transition: all 0.8s cubic-bezier(0.23, 1, 0.32, 1);
		}

		.animated-button .text {
			position: relative;
			z-index: 1;
			transform: translateX(-6px); /* Halved from -12px */
			white-space: nowrap; /* Ensure text does not wrap */
		}

		.animated-button:hover {
			box-shadow: 0 0 0 6px transparent; /* Halved from 12px */
			color: #212121;
			border-radius: 6px; /* Halved from 12px */
		}

			.animated-button:hover .arr-1 {
				right: -12.5%; /* Halved from -25% */
			}

			.animated-button:hover .arr-2 {
				left: 8px; /* Halved from 16px */
			}

			.animated-button:hover .text {
				transform: translateX(6px); /* Halved from 12px */
			}

			.animated-button:hover svg {
				fill: #1f387e;
			}

		.animated-button:active {
			scale: 0.95;
			box-shadow: 0 0 0 2px greenyellow; /* Halved from 4px */
		}

		.animated-button:hover .circle {
			width: 110px; /* Halved from 220px */
			height: 110px; /* Halved from 220px */
			opacity: 1;
		}
	/* From Uiverse.io by Tsiangana */
	.Btn {
		display: flex;
		align-items: center;
		justify-content: flex-start;
		width: 35px; /* Decreased width */
		height: 35px; /* Decreased height */
		border: none;
		border-radius: 50%;
		cursor: pointer;
		position: relative;
		overflow: hidden;
		transition-duration: 0.3s;
		box-shadow: 2px 2px 8px rgba(0, 0, 0, 0.199); /* Adjusted shadow */
		background: rgb(255, 135, 65);
		background: linear-gradient(250deg, rgba(255, 135, 65, 1) 15%, rgba(255, 65, 65, 1) 65%);
	}

	/* plus sign */
	.sign {
		width: 100%;
		transition-duration: 0.3s;
		display: flex;
		align-items: center;
		justify-content: center;
	}

		.sign svg {
			width: 12px; /* Decreased SVG width */
		}

			.sign svg path {
				fill: white;
			}

	/* text */
	.text1 {
		position: absolute;
		right: 0%;
		width: 0%;
		opacity: 0;
		color: white;
		font-size: 1em; /* Decreased font size */
		font-weight: 600;
		transition-duration: 0.3s;
	}

	/* hover effect on button width */
	.Btn:hover {
		width: 100px; /* Decreased hover width */
		border-radius: 30px; /* Adjusted border radius */
		transition-duration: 0.3s;
	}

		.Btn:hover .sign {
			width: 30%;
			transition-duration: 0.3s;
			padding-left: 10px; /* Adjusted padding */
		}

		/* hover effect button's text */
		.Btn:hover .text1 {
			opacity: 1;
			width: 70%;
			transition-duration: 0.3s;
			padding-right: 5px; /* Adjusted padding */
		}

	/* button click effect */
	.Btn:active {
		transform: translate(1px, 1px); /* Adjusted click effect */
	}

</style>



